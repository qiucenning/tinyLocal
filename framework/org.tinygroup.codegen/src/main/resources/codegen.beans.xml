<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                    http://www.springframework.org/schema/context
                    http://www.springframework.org/schema/context/spring-context-2.5.xsd"
	default-autowire="byType" default-lazy-init="true">
	
	<bean id="codeDocumentGenerater" scope="singleton"
		class="org.tinygroup.docgen.impl.DocumentGeneraterImpl">
		<property name="documentGeneraterVelocityHelper">
			<ref bean="codeDocumentGeneraterVelocityHelper" />
		</property>
	</bean>
	<bean id="codeDocumentGeneraterVelocityHelper" scope="singleton"
		class="org.tinygroup.velocity.impl.VelocityHelperImpl">
		<property name="fullContextFileRepository">
			<ref bean="codeFullContextFileRepository" />
		</property>
	</bean>
	<bean id="codeFullContextFileRepository" scope="singleton"
		class="org.tinygroup.fileresolver.impl.FullContextFileRepositoryImpl">
	</bean>
</beans>
