<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
       default-autowire="byName" default-lazy-init="true">

	<!-- plugin相关 -->
	<bean id="tinyPluginFileProcessor" scope="singleton"
		class="org.tinygroup.plugin.fileprocessor.PluginFileProcessor"
		autowire="byType">
	</bean>
	<bean id="tinyPluginManager" scope="singleton"
		class="org.tinygroup.plugin.impl.PluginManagerImpl">
	</bean>
	<bean id="PluginMgtProcessor" scope="singleton"
		class="org.tinygroup.plugin.applicationprocessor.PluginMgtProcessor">
		<property name="pluginManager" ref="tinyPluginManager"></property>
	</bean>
</beans>
