	<bean id="remoteConfigEnvironmentService" name="remoteConfigEnvironmentService"
		class="org.tinygroup.remoteconfig.service.impl.RemoteConfigEnvironmentServiceImpl">
		<property name="environmentManager" ref="environmentManager"></property>
	</bean>
	
	<bean id="remoteConfigModuleService" name="remoteConfigModuleService"
		class="org.tinygroup.remoteconfig.service.impl.RemoteConfigModuleServiceImpl">
		<property name="moduleManager" ref="moduleManager"></property>
		<property name="configItemManager" ref="remoteConfigServer"></property>
	</bean>
	
	<bean id="remoteConfigProductService" name="remoteConfigProductService"
		class="org.tinygroup.remoteconfig.service.impl.RemoteConfigProductServiceImpl">
		<property name="productManager" ref="productManager"></property>
	</bean>
	
	<bean id="remoteConfigVersionService" name="remoteConfigVersionService"
		class="org.tinygroup.remoteconfig.service.impl.RemoteConfigVersionServiceImpl">
		<property name="versionManager" ref="versionManager"></property>
		<property name="remoteConfigEnvService" ref="remoteConfigEnvironmentService"></property>
	</bean>
	
	<bean id="remoteConfigItemService" name="remoteConfigItemService"
		class="org.tinygroup.remoteconfig.service.impl.RemoteConfigItemServiceImpl">
		<property name="versionManager" ref="versionManager"></property>
		<property name="remoteConfigEnvService" ref="remoteConfigServer"></property>
