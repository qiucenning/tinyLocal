<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd"
	   default-autowire="byName" default-lazy-init="true">
	
	<bean id="jedisManager" name="jedisManager" scope="singleton"
		class="org.tinygroup.cache.redis.impl.JedisManagerImpl">
	</bean>
	
	<bean id="redisCacheManager" name="redisCacheManager" scope="singleton"
		class="org.tinygroup.cache.redis.RedisCacheManager">
		<property name="jedisManager" ref="jedisManager"></property>
	</bean>
	
	<bean id="jedisConfigsFileProcessor" name="jedisConfigsFileProcessor" scope="singleton"
		class="org.tinygroup.cache.redis.fileresolver.JedisConfigsFileProcessor">
		<property name="jedisManager" ref="jedisManager"></property>
	</bean>
	
</beans>
