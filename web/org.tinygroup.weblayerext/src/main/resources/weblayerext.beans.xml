<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                    http://www.springframework.org/schema/context
                    http://www.springframework.org/schema/context/spring-context-2.5.xsd"
	default-autowire="byName" default-lazy-init="true">
	
	<bean id="pageCacheTinyFilter" scope="singleton"
		class="org.tinygroup.weblayer.filter.PageCacheTinyFilter">
	</bean>
	<bean id="dataSouceTinyFilter" scope="singleton"
		class="org.tinygroup.weblayer.filter.DataSouceTinyFilter">
	</bean>
	<bean id="velocityViewProcessor" scope="singleton"
		class="org.tinygroup.weblayer.tinyprocessor.VelocityLayoutViewTinyProcessor">
		<property name="fullContextFileRepository" ref="fullContextFileRepository"></property>
		<property name="velocityHelper" ref="velocityHelper"></property>
	</bean>
	<bean id="velocityContextConfiguration" scope="singleton"
		class="org.tinygroup.weblayer.tinyprocessor.VelocityContextConfiguration">
	</bean>
	<bean id="velocityViewServlet" scope="singleton"
		class="org.tinygroup.weblayer.servlet.VelocityLayoutViewServlet">
		<property name="fullContextFileRepository" ref="fullContextFileRepository"></property>
		<property name="velocityHelper" ref="velocityHelper"></property>
	</bean>
</beans>
